---
import BaseLayout from "@components/base/BaseLayout.astro";
import { getReviews, type Review } from "@lib/turso";

export const prerender = false; // This page needs server-side rendering

// Fetch reviews from Turso database
let reviews: Review[] = [];
let error = null;

try {
  reviews = await getReviews();
} catch (e) {
  console.error("Error loading reviews:", e);
  error = e;
}
---

<BaseLayout title={"Reviews"} description={"This is the reviews page."}>
  <div class="w-full p-4">
    <div class="mb-14 mx-auto max-w-4xl">
      <!-- Review Form -->
      <div class="glass rounded-lg p-8 intersect:animate-fadeUp opacity-0 mb-8">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">
          Submit Your Review
        </h2>
        <form id="review-form" class="space-y-6">
          <div>
            <label
              for="name"
              class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300"
            >
              Your Name <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Enter your name"
            />
          </div>

          <div>
            <label
              for="review"
              class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300"
            >
              Your Review <span class="text-red-500">*</span>
            </label>
            <textarea
              id="review"
              name="review"
              required
              rows="6"
              class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-vertical"
              placeholder="Share your thoughts..."></textarea>
          </div>

          <div class="flex items-center gap-4">
            <button
              type="submit"
              class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            >
              Submit Review
            </button>
            <span
              id="form-message"
              class="text-sm font-medium"
              role="status"
              aria-live="polite"></span>
          </div>
        </form>
      </div>

      <!-- Display Reviews -->
      <div class="glass rounded-lg p-8 intersect:animate-fadeUp opacity-0">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">
          User Reviews
        </h2>
        <div id="reviews-container" class="space-y-6">
          {
            error ? (
              <p class="text-red-600 dark:text-red-400">
                Error loading reviews. Please try again later.
              </p>
            ) : reviews.length === 0 ? (
              <p class="text-gray-600 dark:text-gray-400 italic">
                No reviews yet. Be the first to share your thoughts!
              </p>
            ) : (
              reviews.map((review) => (
                <div class="border-b border-gray-200 dark:border-gray-700 pb-6 last:border-b-0">
                  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                    {review.name}
                  </h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400 mb-3">
                    {review.timestamp}
                  </p>
                  <p class="text-gray-700 dark:text-gray-300 whitespace-pre-wrap">
                    {review.review}
                  </p>
                </div>
              ))
            )
          }
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  const form = document.getElementById("review-form") as HTMLFormElement;
  const messageEl = document.getElementById("form-message") as HTMLSpanElement;

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const submitButton = form.querySelector(
      'button[type="submit"]'
    ) as HTMLButtonElement;

    const name = formData.get("name") as string;
    const review = formData.get("review") as string;

    if (!name || !review) {
      messageEl.textContent = "Please fill in all fields";
      messageEl.className =
        "text-sm font-medium text-red-600 dark:text-red-400";
      return;
    }

    // Disable submit button and show loading state
    submitButton.disabled = true;
    submitButton.textContent = "Submitting...";
    messageEl.textContent = "";
    messageEl.className = "text-sm font-medium";

    try {
      const response = await fetch("/api/submit-review", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          name: name.trim(),
          review: review.trim(),
        }),
      });

      const data = await response.json();

      if (response.ok) {
        messageEl.textContent = "Review submitted successfully!";
        messageEl.className =
          "text-sm font-medium text-green-600 dark:text-green-400";
        form.reset();

        // Reload the page to show the new review
        setTimeout(() => {
          window.location.reload();
        }, 1000);
      } else {
        messageEl.textContent = data.error || "Failed to submit review";
        messageEl.className =
          "text-sm font-medium text-red-600 dark:text-red-400";
      }
    } catch (error) {
      messageEl.textContent = "An error occurred. Please try again.";
      messageEl.className =
        "text-sm font-medium text-red-600 dark:text-red-400";
      console.error("Error submitting review:", error);
    } finally {
      // Re-enable submit button
      submitButton.disabled = false;
      submitButton.textContent = "Submit Review";
    }
  });
</script>
